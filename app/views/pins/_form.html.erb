<%= form_for @pin, html: { multipart: true } do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this bubble from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control", cols: "3" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
  
    <%= f.text_area :description, class: "form-control", rows: "3", placeholder: "Describe your idea here!" %>
  </div>
  <div class="form-group">
    <%= f.submit "Blow Bubble", class: "btn btn-primary" %>
  </div>
<% end %>