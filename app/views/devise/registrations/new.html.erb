<center>
<div class="panel panel2 panel1 panel-default wide">
  <div class="panel-heading">
  
    <%= link_to :back do %>
  <span class="glyphicon glyphicon-menu-left accentFont left"></span>
  <% end %>

    <h1>Sign up</h1>
  </div>

  <div  class="panel-body wide">
  
   <div class="deleteColor">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      </div>

 <div class="form-group">
      <%= f.label :profile_image%>
      <%= f.file_field :avatar %>
    </div>

      <div class="form-group">
        <%= f.label :full_name %>
        <%= f.text_field :name, autofocus: true, class: "form-control field" %>
      </div>

      <div class="form-group">
        <%= f.label :email%>
        <%= f.email_field :email, autofocus: true, class: "form-control field"%>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <br>
        <i> (must be longer than 8 characters)</i>
        <%= f.password_field :password, class: "form-control field" %>
      </div>

        <div class="form-group">
        <%= f.label :password_confirmation %>
         <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>

              <div class="form-group">
                  <p class="accentFont small"> Bubbleblow.com does not take any responibility in what users of the site post and cannot be held responsible if a user posts content that disturbes other users. By signing up you are agreeing to this.</p>
              </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
</center>


